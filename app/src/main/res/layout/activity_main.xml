<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora de Horas Semanales"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Calendario para seleccionar mes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona el mes y año:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_marginBottom="16dp"/>

        <!-- Lunes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_lunes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_lunes_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Martes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_martes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_martes_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Miercoles -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miércoles:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_miercoles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_miercoles_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Jueves -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_jueves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_jueves_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Viernes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viernes:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_viernes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_viernes_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Sabado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sábado:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_sabado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_sabado_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <!-- Domingo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domingo:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/entrada_domingo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Horas"
                android:inputType="number"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/entrada_domingo_min"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Minutos"
                android:inputType="number"
                android:maxLength="2"/>
        </LinearLayout>

        <Button
            android:id="@+id/boton_calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/resultado_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total semana: 0 horas"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/resultado_promedio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio diario: 0 horas"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/resultado_extras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horas extras (>40h): 0 horas"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/resultado_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proyección mensual: 0 horas"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>